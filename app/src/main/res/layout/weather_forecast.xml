<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/currentTemp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="Current Temperature"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minTemp"
        android:layout_below="@id/currentTemp"
        android:textAlignment="center"
        android:text="Minimum Temperature"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        android:textAlignment="center"
        android:layout_below="@id/minTemp"
        android:text="Maximum Temperature"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Uv"
        android:textAlignment="center"
        android:layout_below="@id/maxTemp"
        android:text="UV Rating"/>
<ProgressBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_below="@+id/Uv"
    android:visibility="invisible"
    android:id="@+id/progressBar"
    android:layout_centerInParent="true"
    />
</RelativeLayout>